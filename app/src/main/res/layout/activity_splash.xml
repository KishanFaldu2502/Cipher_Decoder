<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aswdc_cipherdicoder.design.Activity_Splash"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="@dimen/txt_200"
        android:layout_height="@dimen/txt_200"
        android:layout_marginTop="@dimen/txt_60"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/app_logo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_70"
            android:layout_gravity="bottom"
            android:padding="@dimen/txt_10"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_50"
                android:layout_weight="1"
                android:src="@drawable/logo_diet"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/txt_50"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:src="@drawable/logo_aswdc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
