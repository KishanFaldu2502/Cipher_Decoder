<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    tools:context=".Activity_Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_edittext"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dashboard_et_plaintext"
                        style="@style/Dashboard_edittext" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:background="#ffffff"
                    android:text="@string/tv_plaintext"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_edittext">

                    <Spinner
                        android:id="@+id/dashboard_sp_ciphermethod"
                        style="@style/Dashboard_spinner" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:background="#ffffff"
                    android:text="@string/tv_ciphermethod"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dashboard_rl_shiftkey1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_edittext">

                    <EditText
                        android:id="@+id/dashboard_et_shiftkey1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/txt_10"
                        android:gravity="top"
                        android:hint="@string/edit_shiftkey1"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingLeft="@dimen/txt_10"
                        android:paddingRight="@dimen/txt_10"
                        android:paddingTop="@dimen/txt_10"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dashboard_tv_ciphertext"
                        style="@style/Dashboard_textview" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/txt_10"
                    android:background="#ffffff"
                    android:text="@string/tv_ciphertext"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txt_10"
                android:layout_marginRight="@dimen/txt_10"
                android:layout_marginTop="@dimen/txt_10">

                <ImageButton
                    android:id="@+id/dashboard_et_microphone"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="#FFFFFF"
                    android:padding="@dimen/txt_5"
                    android:src="@mipmap/microphone" />

                <ImageButton
                    android:id="@+id/dashboard_tv_copy"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="@dimen/txt_5"
                    android:src="@mipmap/copy" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>